<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<job id="spurs" xmlns="http://www.springframework.org/schema/batch">
		<step id="fileImport">
			<tasklet>
				<chunk commit-interval="10" reader="resultsReader" processor="matchFilter" writer="consoleWriter"></chunk>
			</tasklet>
		</step>
	</job>

	<bean id="resultsReader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<!-- TODO configure this -->
	</bean>
	

</beans>
